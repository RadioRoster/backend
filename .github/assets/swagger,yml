    /login:
        post:
            tags:
                - Auth
            summary: "Logs in a user and returns a JWT-Token."
            operationId: login
            consumes:
                - application/json
            produces:
                - application/json
            parameters:
                - in: body
                  name: credentials
                  description: "The user's login information."
                  schema:
                      type: object
                      properties:
                          username:
                              type: string
                          password:
                              type: string
                      required:
                          - username
                          - password
            responses:
                "200":
                    description: "OK"
                    schema:
                        type: object
                        properties:
                            access_token:
                                type: string
                "500":
                    $ref: "#/responses/500"

