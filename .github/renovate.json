{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        ":approveMajorUpdates",
        ":automergeMinor",
        ":semanticCommits",
        ":separateMultipleMajorReleases",
        ":timezone(Europe/Berlin)",
        ":pinAllExceptPeerDependencies",
        ":rebaseStalePrs",
        ":label(Scope: Deps)"
    ],
    "baseBranchPatterns": [
        "main"
    ],
    "minimumReleaseAge": "3 days",
    "rollbackPrs": true,
    "automergeStrategy": "squash",
    "reviewers": [
        "team:backend"
    ],
    "packageRules": [
        {
            "description": "Disable specific dependency updates",
            "matchPackageNames": [
                "mariadb",
                "composer",
                "php"
            ],
            "enabled": false
        }
    ]
}
